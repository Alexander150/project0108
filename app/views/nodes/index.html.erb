<div class="nodes" ng-controller="NodeCtrl" ng-init="init()">
	<div class="node" ng-repeat="node in nodes" id="node_{{ node.id }}" ng-click="change($event)">
		<div>{{ node.id }}</div>
		<div>{{ node.name }}</div>
		<div>{{ node.description }}</div>
		<div>{{ node.next_node }}</div>
	</div>
	<div id="isOk" class="isOk">
		<div class="text">
			Поменять выделенные блоки местами?
		</div>
		<div class="buttons">
			<button ng-click="isOk(false)">Нет</button>
			<button ng-click="isOk(true)">Да</button>
		</div>
	</div>
</div>

<svg id="nodes" width="100%" height="100%" style="position: fixed; top: 0; z-index: 1;">
</svg>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>