<div class="nodes">
	<% @nodes.each do |n| %>
		<div class="node" id="node_<%= n.id %>" onclick="change(this)">
			<div><%= n.id %></div>
			<div><%= n.name %></div>
			<div><%= n.description %></div>
			<div><%= n.next_node %></div>
		</div>
	<% end %>
</div>
<script type="text/javascript">
	var div1 = null;
	var div2 = null;
	function change(event){
		if (div1 == null) {
			div1 = document.getElementById(event.id);
			div1.style.background = 'red';
		}else{
			div2 = document.getElementById(event.id);
			div2.style.background = 'yellow';
		}
		if (div1 != null && div2 != null){
			div1.style.background = 'lightblue';
			div2.style.background = 'lightblue';
			var div11=div1.cloneNode(true);
			var div22=div2.cloneNode(true);
			div2.parentNode.insertBefore(div11,div2);
			div1.parentNode.insertBefore(div22,div1);
			div1.parentNode.removeChild(div1);
			div2.parentNode.removeChild(div2);
			$.ajax({
				url: '/nodes/change',
				type: 'POST',
				data: {
					id_1: div1.id,
					id_2: div2.id
				},
			})
			.done(function() {
				console.log("success");
				location.reload();
			})
			.fail(function() {
				console.log("error");
			});
			div1 = null;
			div2 = null;
		}
	}
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>